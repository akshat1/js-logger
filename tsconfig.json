{
  "compilerOptions": {
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "declaration": true,
    "lib": ["ESNext", "DOM"],
    "outDir": "lib",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "assets"],
  "typedocOptions": {
    "out": "docs",
    "exclude": "**/node_modules/**/*"
  }
}
